doctype html
head
  meta(charset='utf-8')
  title NuVu Print
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300,400,700', type='text/css')
  link(rel='stylesheet', href='/www/bower_components/bootstrap/dist/css/bootstrap.min.css', media='screen', charset='utf-8')
  link(rel='stylesheet', href='/www/bower_components/font-awesome/css/font-awesome.min.css', media='screen')
  link(rel='stylesheet', href='/www/bower_components/select2/dist/css/select2.min.css', media='screen')
  link(rel='stylesheet', href='/www/css/styles.min.css', media='screen', charset='utf-8')
body
  .page-wrapper
    .add-pane
      .logotype-wrapper
        img(src='/www/img/logotype.svg', alt='NuVu Print')
      .model-preview-wrapper
        img(src='/www/img/model-placeholder.png', alt='Model Preview')
      .add-job-form-wrapper
        form.add-job-form
          .add-job-row
            label.add-job-text-label(for="add-job-job") Job
            input.add-job-textfield#add-job-job(type="text", name="job")
          .add-job-row
            label.add-job-text-label(for="add-job-name") Name
            input.add-job-textfield#add-job-name(type="text", name="name")
          .add-job-row
            label.add-job-select-label(for="add-job-priority") Priority
            select.add-job-select#add-job-priority(name="priority")
              option(value="5") Absolutely required
              option(value="4") Urgent
              option(value="3") Important
              option(value="2", selected) Normal
              option(value="1") Low
              option(value="0") Lunch/After NuVu
          .add-job-row
            label.add-job-select-label(for="add-job-quality") Quality
            select.add-job-select#add-job-quality(name="quality")
              option(disabled selected value)
              option(value="4") High
              option(value="3") Normal
              option(value="2", selected) Speedy
              option(value="1") Uber-fast
              option(value="0") Custom
          .add-job-row
            button.slice-button(type="submit") SLICE


    .queue-pane
      table.jobs-table
        thead
          tr
            td JOB
            td NAME
            td ETA
        tbody
          each job in queue
            tr
              td
                i.fa.fa-info-circle.job-more-info
                span= ' ' + job.job
              td= job.name
              td= job.eta
  script(src='/www/js-prod/libraries.min.js', charset='utf-8')
  script(src='/www/js-prod/scripts.min.js', charset='utf-8')
